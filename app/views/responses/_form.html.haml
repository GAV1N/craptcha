= form_for @response do |f|
  -if @response.errors.any?
    #error_explanation
      %h2= "#{pluralize(@response.errors.count, "error")} prohibited this response from being saved:"
      %ul
        - @response.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :posting_id
    = f.number_field :posting_id
  .field
    = f.label :caller_id
    = f.number_field :caller_id
  .field
    = f.label :ip
    = f.text_field :ip
  .field
    = f.label :pin
    = f.text_field :pin
  .field
    = f.label :generated_at
    = f.datetime_select :generated_at
  .field
    = f.label :called_at
    = f.datetime_select :called_at
  .field
    = f.label :twilio_sid
    = f.text_field :twilio_sid
  .actions
    = f.submit 'Save'
